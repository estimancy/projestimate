<b>
  <%= I18n.t :new_unit_of_work %>
</b>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        <%= I18n.t :new_unit_of_work %>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_unit_of_work) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">

        <%= hidden_field_tag :position, params[:position] %>

        <%= f.input :name, label: "Nom de l'unité d'oeuvre", input_html: { class: "input-xxlarge" } %>
        <%= f.input :comments, input_html: { rows: "5" }, label: "Description", input_html: { class: "input-xxlarge" }  %>
        <%= f.input :guw_type_id, as: :select, collection: @guw_model.guw_types.map{|i| [i.name, i.id]}, label: "Type d'UO", include_blank: false, input_html: { class: "input-xxlarge" }  %>
        <%= f.input :guw_work_unit_id, as: :select, collection: @guw_model.guw_work_units, label: "Opération", include_blank: false, input_html: { class: "input-xxlarge" }  %>
        <%= f.input :organization_technology_id,
                    as: :select,
                    collection: @guw_model.guw_types.first.guw_complexity_technologies.select{|ct| ct.coefficient != nil }.map{|i| i.organization_technology }.uniq.map{|i| [i.name, i.id]},
                    selected: Guw::GuwUnitOfWorkGroup.find(params[:g]).organization_technology.id,
                    label: "Technologie",
                    include_blank: false,
                    input_html: { class: "input-xxlarge" } %>
        
        <%= f.input :guw_unit_of_work_group_id, as: :select, collection: current_module_project.guw_unit_of_work_groups, label: "Groupe d'UO", selected: params[:g], input_html: { class: "input-xxlarge" }  %>
      </div>

      <%= f.button :submit, I18n.t('save') %>
    <% end %>
  </div>
</div>