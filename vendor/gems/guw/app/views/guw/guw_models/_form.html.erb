<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        Model d'Unité d'Oeuvres
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_model) do |f| %>
      <%= f.error_notification %>

      <%= f.input :organization_id, as: :hidden, input_html: { value: params[:organization_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description, input_html: { class: "input-xxlarge", rows: "5"} %>
        <%= f.input :three_points_estimation, inline_label: 'Estimation 3 points' %>
        <%= f.input :output_unit, inline_label: 'Unité de sortie' %>
      </div>

      <%= f.button :submit, I18n.t('save') %>
    <% end %>
  </div>
</div>