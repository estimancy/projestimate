<h4>
  <b>
    <%= I18n.t(:groups_list) %>
  </b>
</h4>

<div class="tabs">
  <ul>
    <li>
      <a href="#tabs-1">
        <%= I18n.t(:groups)%>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <table class="table table-bordered">
      <tr>
        <th><%= I18n.t(:name) %></th>
        <th><%= I18n.t(:actions) %></th>
      </tr>

      <% @guw_unit_of_work_groups.each do |uowg| %>
        <tr>
          <td><%= uowg.name %></td>
          <td class="center">
            <%= link_to '', guw.edit_guw_model_guw_unit_of_work_group_path(params[:guw_model_id], uowg), class: "fa fa-pencil" %>
            <% if can? :execute_estimation_plan, @project %>
                <%= link_to '', uowg, method: :delete, data: { confirm: I18n.t(:are_you_sure) }, class: "fa fa-trash" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<br>

<% if can? :execute_estimation_plan, @project %>
    <%= link_to I18n.t(:add_new_unit_of_work_group), guw.new_guw_model_guw_unit_of_work_group_path(params[:guw_model_id]), class: "btn" %>
<% end %>
<%= link_to I18n.t(:back), main_app.dashboard_path(@project), class: "btn" %>
