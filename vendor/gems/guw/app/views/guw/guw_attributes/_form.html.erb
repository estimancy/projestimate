<div class="tabs">

  <ul>
    <li>
      <a href="#tabs-1">
        <%= I18n.t(:pe_attributes) %>
      </a>
    </li>
  </ul>

  <div id="tabs-1">
    <%= simple_form_for(@guw_attribute) do |f| %>
      <%= f.error_notification %>

      <%= f.input :guw_model_id, as: :hidden, input_html: { value: params[:guw_model_id] } %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description, input_html: { rows: "5"} %>
      </div>

      <% if can? :manage_modules_instances, ModuleProject %>
        <%= f.button :submit, I18n.t('save')  %>
      <% end %>
      <%= link_to I18n.t(:back), :back, class: "btn" %>
    <% end %>
  </div>
</div>